*******************************************
.include ../Analysis/Sim_t4.cir
*******************************************

.control
set hcopypscolor=1
set color0=white
set color1=black
set color2=red
set color3=blue
set color4=violet
set color5=rgb:3/8/0
set color6=rgb:4/0/0
set units=degrees

************************************************
op


echo  "op_TAB"
print all
echo  "op_END"


let Vce = v(coll)-v(emit)
let Vbe = v(base)-v(emit)
let Vec = v(emit2)
let Veb = v(emit2)-v(coll)

let diffPNP = (Vec-Veb)
let diffNPN = (Vce-Vbe)


echo  "op2_TAB"
print Vce
print Vbe
print Vec
print Veb
print diffNPN
print diffPNP
echo  "op2_END"

* time analysis
tran 1e-5 1e-2
*plot v(coll)
hardcopy vo1.ps vdb(coll)


* frequency analysis
ac dec 10 10 1000MEG
*plot vdb(coll)
*plot vp(coll)
hardcopy vo1f.ps vdb(coll)


set Cost = Mu
let cost = $Cost$ 
let cutoff = vecmax(vdb(out))-3
meas ac f1 WHEN vdb(out)=cutoff RISE=1
meas ac f2 WHEN vdb(out)=cutoff CROSS=LAST
let bandwidth = f2-f1
let gain_low = abs(v(out)[6]/v(in)[6])
let gain_band = abs(v(out)[40]/v(in)[40])
let gain_high = abs(v(out)[46]/v(in)[46])
let merit = (bandwidth*gain_band)/(f1*cost)
hardcopy vo2f_m.ps vdb(out) cutoff
hardcopy vo2f_ph.ps vp(out)
hardcopy tf.ps {vdb(out)-vdb(in)}

echo  "freq_TAB"
print bandwidth
print gain_low
print gain_band
print gain_high
print bandwidth*gain_band
print merit

*input impedance in ohm
let input_impedance = 100*v(in)[40]/(v(in)[40]-v(in2)[40])
print input_impedance

*output impedance in ohm
let output_impedance = v(out)[40]/(i(vout)[40])
print output_impedance
echo  "freq_END"

hardcopy imp.ps (100*v(in)/(v(in)-v(in2))) (v(out)/(i(vout))) input_impedance output_impedance


quit
.endc

.end

